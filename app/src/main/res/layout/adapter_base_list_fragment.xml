<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_width="@dimen/ranking_fragment_size"
            android:layout_height="match_parent"
            android:id="@+id/textViewRank"
            android:textSize="30sp"
            android:textStyle="normal|bold" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ranking_fragment_text_size"
                android:id="@+id/textViewTitle"
                android:textSize="18sp" />
            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ranking_fragment_text_size"
                android:id="@+id/textViewAccess"
                android:textSize="12sp" />
        </LinearLayout>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/nextButton"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/ranking_fragment_size"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_navigate_next_white"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />
    </LinearLayout>
</LinearLayout>