<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/image_fragment_height"
    android:background="@color/colorPrimary"
    tools:context="net.dentare.akibamapandroid.fragment.ImageSwipeFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_margin="@dimen/image_fragment_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/imageViewMain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_fragment_image_height"
        app:srcCompat="@mipmap/ic_launcher"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" />
    </LinearLayout>
</LinearLayout>
